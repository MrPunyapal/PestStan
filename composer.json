{
    "name": "peststan/peststan",
    "description": "PHPStan extension for Pest PHP testing framework",
    "type": "phpstan-extension",
    "license": "MIT",
    "keywords": ["phpstan", "pest", "testing", "static-analysis"],
    "require": {
        "php": "^8.2",
        "phpstan/phpstan": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "pestphp/pest": "^3.0 || ^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-strict-rules": "^2.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PestStan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "platform-check": false
    },
    "scripts": {
        "lint": [
            "rector",
            "pint"
        ],
        "test:lint": [
            "rector --dry-run",
            "pint --test"
        ],
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
